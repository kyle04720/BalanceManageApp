<% @page_title = "収入カテゴリ一覧"%>
<h2><%= @page_title %></h2>

<%= link_to "収入カテゴリ新規登録", :new_income %>

<% if @incomes.present? %>
<table>
    <thead>
        <tr>
            <th>カテゴリ名<th>
            <th>備考<th>
            <th>操作</th>
        </tr>
    </thead>
    <tbody>
        <% @incomes.each do |income|%>
        <tr>
            <td><%= income.name %></td>
            <td><%= income.description %></td>
            <td>
            <%= link_to "編集", [:edit, income] %>
            <%= link_to "削除", income, method: :delete, 
                data: { confirm: "本当にこのカテゴリを削除しますか？"} %>
            </td>
        </tr>
        <% end %>
    </tbody>
</table>

<% else %>
    <p>登録されている収入カテゴリがありません。</p>
<% end %>

<p><%= link_to "TOPに戻る", root_path %></p>